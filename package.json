{
  "name": "pug-postcss-js_boilerplate",
  "version": "1.0.0",
  "description": "SSG_pug-postcss-js_boilerplate",
  "config": {
    "feature_name": "feature",
    "path_dist": "./dist",
    "ver_css": "1.0.0",
    "ver_js": "1.0.0"
  },
  "scripts": {
    "bs": "node server.js",
    "lint_style": "stylelint ./src/css/**/*.css",
    "format_js": "eslint --fix ./src/js",
    "img_min": "node imgMin.js",
    "webp": "./webp.sh",
    "copy_img_temporary": "cpx \"./src/img/**/*\" ./src/temporary/img/",
    "copy_img": "cpx \"./src/temporary/img/**/*\" $npm_package_config_path_dist/SSG_pug-postcss-js_boilerplate/$npm_package_config_feature_name/img/",
    "clean": "rimraf $npm_package_config_path_dist/SSG_pug-postcss-js_boilerplate/$npm_package_config_feature_name",
    "clean_js": "rimraf $npm_package_config_path_dist/SSG_pug-postcss-js_boilerplate/$npm_package_config_feature_name/js/@$npm_package_config_ver_js/",
    "watch_html": "chokidar './src/pug/**/*.pug' -c 'npm run build_html'",
    "watch_json": "chokidar './src/config/*.json' -c 'npm run build_html'",
    "watch_css": "chokidar './src/css/**/*.css' -c 'npm run build_css'",
    "watch_img": "chokidar './src/img/**/*' -c 'npm run build_img'",
    "build_html": "node create.js -- $npm_package_config_path_dist",
    "build_css": "postcss ./src/css/app.css -o $npm_package_config_path_dist/SSG_pug-postcss-js_boilerplate/$npm_package_config_feature_name/css/@$npm_package_config_ver_css/app.css --no-map && npm run lint_style",
    "build_img": "npm run copy_img_temporary && npm run img_min && npm run webp && npm run copy_img",
    "dev": "npm run bs & npm run watch_html & npm run watch_json & npm run watch_css & npm run watch_img & webpack --mode development --watch --env.path_dist=$npm_package_config_path_dist --env.feature_name=$npm_package_config_feature_name --env.ver_js=$npm_package_config_ver_js",
    "build": "npm run clean && npm run clean_js && npm run build_css && npm run build_html && npm run format_js && webpack --mode production --env.path_dist=$npm_package_config_path_dist --env.feature_name=$npm_package_config_feature_name --env.ver_js=$npm_package_config_ver_js && npm run build_img"
  },
  "license": "ISC",
  "browserslist": [
    "last 1 Edge versions",
    "last 1 Firefox versions",
    "last 1 Chrome versions",
    "last 1 Safari versions",
    "iOS >= 9",
    "Android >= 5",
    "last 1 ChromeAndroid versions"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.6.0",
    "axios": "^0.20.0",
    "intersection-observer": "^0.7.0",
    "js-cookie": "^3.0.1",
    "lazysizes": "^5.1.1",
    "picturefill": "^3.0.3",
    "smoothscroll-polyfill": "^0.4.4",
    "stickyfill": "^1.1.1-strict"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.6.0",
    "@deboxsoft/cpx": "^1.5.0",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.7",
    "chokidar-cli": "^2.1.0",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^3.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "fs": "0.0.1-security",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-svgo": "^7.0.0",
    "path": "^0.12.7",
    "postcss": "^7.0.18",
    "postcss-calc": "^7.0.1",
    "postcss-cli": "^7.1.0",
    "postcss-color-function": "^4.1.0",
    "postcss-comment": "^2.0.0",
    "postcss-conditionals": "^2.1.0",
    "postcss-custom-media": "^7.0.8",
    "postcss-custom-properties": "^9.0.2",
    "postcss-each": "^0.10.0",
    "postcss-each-variables": "^0.3.0",
    "postcss-import": "^12.0.1",
    "postcss-mixins": "^6.2.2",
    "postcss-nested": "^4.1.2",
    "postcss-simple-vars": "^5.0.2",
    "postcss-size": "^3.0.0",
    "prettier": "^1.18.2",
    "promise": "^8.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "stats-webpack-plugin": "^0.7.0",
    "stylelint": "^11.0.0",
    "stylelint-cli": "^1.2.0",
    "stylelint-config-standard": "^19.0.0",
    "swiper": "^4.3.3",
    "throttle-debounce": "^2.1.0",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.8"
  }
}
